<%- include('../layout', { 
    title: typeof title !== 'undefined' ? title : 'Insurance Benefits - GLM Admin',
    page: typeof page !== 'undefined' ? page : 'benefits',
    body: `
    <div class="header">
        <h1>Insurance Benefits</h1>
        <div class="header-actions">
            <button class="btn btn-primary" onclick="openAddModal()">Add Benefit</button>
        </div>
    </div>

    <div class="content-card">
        <table id="benefitsTable" class="data-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Percentage</th>
                    <th>Cover Type</th>
                    <th>Status</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Data will be loaded via JavaScript -->
            </tbody>
