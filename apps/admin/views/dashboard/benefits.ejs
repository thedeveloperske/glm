    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">

    <script>
        let benefitsTable;
        let coverTypes = [];
        let editingBenefitId = null;

        $(document).ready(function() {
            loadCoverTypes();
            loadBenefits();
        });

        function loadCoverTypes() {
            fetch('/api/cover-types')
                .then(response => response.json())
                .then(data => {
                    coverTypes = data;
                    const select = document.getElementById('coverType');
                    select.innerHTML = '<option value="">Select Cover Type</option>';
                    data.forEach(ct => {
                        const option = document.createElement('option');
                        option.value = ct.id;
                        option.textContent = ct.name;
                        select.appendChild(option);
                    });
                })
                .catch(error => {
                    console.error('Error loading cover types:', error);
                    alert('Failed to load cover types');
                });
        }

        function loadBenefits() {
            fetch('/api/benefits')
                .then(response => response.json())
                .then(data => {
                    if (benefitsTable) {
                        benefitsTable.destroy();
                    }

                    benefitsTable = $('#benefitsTable').DataTable({
                        data: data,
                        columns: [
                            { 
                                data: 'id',
                                className: 'text-center'
                            },
                            { 
                                data: 'name',
                                className: 'font-semibold'
                            },
                            { 
                                data: 'description',
                                className: 'text-gray-600'
                            },
                            { 
                                data: 'percentage',
                                render: function(data) {
                                    return '<span class="percentage-badge">' + parseFloat(data).toFixed(2) + '%</span>';
                                },
                                className: 'text-center'
                            },
                            { 
                                data: 'coverTypeName',
                                render: function(data) {
                                    return '<span class="cover-type-badge">' + data + '</span>';
                                }
                            },
                            {
                                data: 'isActive',
                                render: function(data) {
                                    return '<span class="status-badge ' + (data ? 'status-active' : 'status-inactive') + '">' + 
                                           (data ? 'Active' : 'Inactive') + '</span>';
                                },
                                className: 'text-center'
                            },
                            {
                                data: 'createdAt',
                                render: function(data) {
                                    const date = new Date(data);
                                    return date.toLocaleDateString('en-US', { 
                                        year: 'numeric', 
                                        month: 'short', 
                                        day: 'numeric' 
                                    });
                                },
                                className: 'text-gray-500'
                            },
                            {
                                data: 'id',
                                render: function(data) {
                                    return '<div class="action-buttons">' +
                                           '<button class="btn btn-secondary btn-sm" onclick="editBenefit(' + data + ')">Edit</button>' +
                                           '<button class="btn btn-danger btn-sm" onclick="deleteBenefit(' + data + ')">Delete</button>' +
                                           '</div>';
                                },
                                orderable: false,
                                className: 'text-center'
                            }
                        ],
                        order: [[0, 'desc']],
                        pageLength: 10,
                        responsive: true,
                        language: {
                            search: "Search:",
                            lengthMenu: "Show _MENU_ entries",
                            info: "Showing _START_ to _END_ of _TOTAL_ entries",
                            infoEmpty: "No entries found",
                            infoFiltered: "(filtered from _TOTAL_ total entries)"
                        },
                        dom: '<"table-header"<"table-header-left"l><"table-header-right"f>>rt<"table-footer"<"table-footer-left"i><"table-footer-right"p>>'
                    });
                })
                .catch(error => {
                    console.error('Error loading benefits:', error);
                    alert('Failed to load benefits');
                });
        }

        function openAddModal() {
            editingBenefitId = null;
            document.getElementById('modalTitle').textContent = 'Add Benefit';
            document.getElementById('benefitForm').reset();
            document.getElementById('benefitId').value = '';
            document.getElementById('isActive').checked = true;
            document.getElementById('benefitModal').style.display = 'flex';
        }

        function editBenefit(id) {
            fetch('/api/benefits/' + id)
                .then(response => response.json())
                .then(data => {
                    editingBenefitId = id;
                    document.getElementById('modalTitle').textContent = 'Edit Benefit';
                    document.getElementById('benefitId').value = data.id;
                    document.getElementById('benefitName').value = data.name;
                    document.getElementById('benefitDescription').value = data.description;
                    document.getElementById('benefitPercentage').value = data.percentage;
                    document.getElementById('coverType').value = data.coverTypeId;
                    document.getElementById('isActive').checked = data.isActive;
                    document.getElementById('benefitModal').style.display = 'flex';
                })
                .catch(error => {
                    console.error('Error loading benefit:', error);
                    alert('Failed to load benefit');
                });
        }

        function closeModal() {
            document.getElementById('benefitModal').style.display = 'none';
            document.getElementById('benefitForm').reset();
            editingBenefitId = null;
        }

        function saveBenefit(event) {
            event.preventDefault();
            
            const formData = {
                name: document.getElementById('benefitName').value,
                description: document.getElementById('benefitDescription').value,
                percentage: parseFloat(document.getElementById('benefitPercentage').value),
                coverTypeId: parseInt(document.getElementById('coverType').value),
                isActive: document.getElementById('isActive').checked
            };

            const url = editingBenefitId ? '/api/benefits/' + editingBenefitId : '/api/benefits';
            const method = editingBenefitId ? 'PUT' : 'POST';

            fetch(url, {
                method: method,
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(formData)
            })
            .then(response => response.json())
            .then(data => {
                closeModal();
                loadBenefits();
                alert(editingBenefitId ? 'Benefit updated successfully!' : 'Benefit added successfully!');
            })
            .catch(error => {
                console.error('Error saving benefit:', error);
                alert('Failed to save benefit');
            });
        }

        function deleteBenefit(id) {
            if (!confirm('Are you sure you want to delete this benefit?')) {
                return;
            }

            fetch('/api/benefits/' + id, {
                method: 'DELETE'
            })
            .then(response => {
                if (response.ok) {
                    loadBenefits();
                    alert('Benefit deleted successfully!');
                } else {
                    alert('Failed to delete benefit');
                }
            })
            .catch(error => {
                console.error('Error deleting benefit:', error);
                alert('Failed to delete benefit');
            });
        }

        // Close modal when clicking outside
        window.onclick = function(event) {
            const modal = document.getElementById('benefitModal');
            if (event.target === modal) {
                closeModal();
            }
        }
    </script>
` }) %>
