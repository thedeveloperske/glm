    <!-- Add/Edit Benefit Modal -->
    <div id="benefitModal" class="modal" style="display: none;">
        <div class="modal-content">
            <div class="modal-header">
                <h2 id="modalTitle">Add Benefit</h2>
                <span class="close" onclick="closeModal()">&times;</span>
            </div>
            <form id="benefitForm" onsubmit="saveBenefit(event)" autocomplete="off">
                <div class="form-group">
                    <label for="benefitName">Benefit Name *</label>
                    <input type="text" id="benefitName" name="name" required placeholder="e.g., Windscreen Cover" autocomplete="off">
                </div>
                <div class="form-group">
                    <label for="benefitDescription">Description *</label>
                    <textarea id="benefitDescription" name="description" required rows="3" placeholder="Enter benefit description" autocomplete="off"></textarea>
                </div>
                <div class="form-group">
                    <label for="benefitPercentage">Percentage (%) *</label>
                    <input type="number" id="benefitPercentage" name="percentage" required step="0.01" min="0" max="100" placeholder="e.g., 15.5" autocomplete="off">
                </div>
                <div class="form-group">
                    <label for="coverType">Cover Type *</label>
                    <select id="coverType" name="coverTypeId" required autocomplete="off">
                        <option value="">Select Cover Type</option>
                        <!-- Options will be loaded via JavaScript -->
                    </select>
                </div>
                <div class="form-group">
                    <label>
                        <input type="checkbox" id="isActive" name="isActive" checked autocomplete="off">
                        Active
                    </label>
                </div>
                <input type="hidden" id="benefitId" name="id" autocomplete="off">
                <div class="modal-actions">
                    <button type="button" class="btn btn-secondary" onclick="closeModal()">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Benefit</button>
                </div>
            </form>
        </div>
    </div>

    <style>
